<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="repository.UserMapper">
    <insert id="insertUser">
        insert into users(account_id,password,nick_name)
        values(#{account_id},#{password},#{nick_name})
    </insert>
    <select id="getUserById" resultType="User">
        select * from users
        where id = #{id}
    </select>
    <select id="getUserByAccountId" resultType="User">
        select * from users
        where account_id = #{account_id}
    </select>
    <select id="getUserByNickName" resultType="User">
        select * from users
        where nick_name = #{nick_name}
    </select>
    <update id="updateUser">
        update users
        set account_id = #{account_id},
            password = #{password},
            nick_name = #{nick_name},
            updated_at = now()
        where id = #{id}
    </update>
    <update id="softDeleteUser">
        update users
        set deleted = true,
            updated_at = now()
        where id = #{id}
    </update>
</mapper>